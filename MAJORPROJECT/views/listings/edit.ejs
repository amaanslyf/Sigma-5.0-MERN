<%layout("/layouts/boilerplate")%>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <br><br>
            <form method="POST" action="/listings/<%=listing._id%>?_method=PUT">
                <h3>Edit your listing</h3>
                <div class="mb-3">
                    <label for="title" class="form-label">Title:</label>
                    <input type="text" name="title" id="title" class="form-control" value="<%=listing.title%>">
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description:</label>
                    <textarea name="description" id="description"
                        class="form-control"><%=listing.description%>"></textarea>
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Image URL:</label>
                    <input type="text" name="image" id="image" class="form-control" value="<%=listing.image%>">
                </div>

                <div class="mb-3">
                    <label for="price" class="form-label">Price:</label>
                    <input type="number" name="price" id="price" value="<%=listing.price%>">
                </div>

                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="location" class="form-label">Location:</label>
                        <input type="text" name="location" id="location" class="form-control"
                            value="<%=listing.location%>">
                    </div>

                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country:</label>
                        <input type="text" name="country" id="country" class="form-control"
                            value="<%=listing.country%>">
                    </div>
                </div>

                <button type="submit" class="btn btn-dark edit-btn mt-3">Edit Listing</button>
        </div>
    </div>

    </form>